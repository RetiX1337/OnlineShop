<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>menu</servlet-name>
        <jsp-file>/menu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>menu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login-processing</servlet-name>
        <jsp-file>/loginprocessing.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-processing</servlet-name>
        <url-pattern>/login-processing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>browse-products</servlet-name>
        <jsp-file>/browseproducts.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>browse-products</servlet-name>
        <url-pattern>/browse-products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <jsp-file>/cart.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>order-processing</servlet-name>
        <jsp-file>/orderprocessing.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>order-processing</servlet-name>
        <url-pattern>/order-processing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orders</servlet-name>
        <jsp-file>/orders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
</web-app>